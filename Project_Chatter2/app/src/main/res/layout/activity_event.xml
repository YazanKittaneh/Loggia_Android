<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.l7.project_chatter.EventActivity"
    android:padding="0dp"
    android:background="@color/bright_foreground_material_dark">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:id="@+id/EventImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/powered_by_google_light" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/EventImage"
        android:layout_alignLeft="@+id/EventImage"
        android:layout_alignStart="@+id/EventImage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attendees: %s"
            android:id="@+id/counters"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</RelativeLayout>
